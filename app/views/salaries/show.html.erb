<h1><%= link_to "Salaries", salaries_path %></h1>
<br />

<div class="hero-unit">
<h4><span class="customer">Employee Personal Details</span></h4>
<h5><strong>Employee Code</strong> : <%= link_to "#{@salary.employee.employee_code}", employees_path %></h5>
<h5><strong>Employee Name</strong> : <%= "#{@salary.employee.name}" %></h5>
<h5><strong>Branch</strong> : <%= "#{@salary.employee.branch}" %></h5>

<hr>
   
<div class="row">
   <div class="span6 customer_left_span_properties">
   <h4><span class="customer">Employee Salary Details</span></h4>

   <div class="row">
   <div class="span3">
   <strong>BASIC</strong>
   </div>
   <div class="span3"> : <%= currency_symbol %><%= @salary.basic_paisas %></div>
   </div>
   
   <div class="row">
   <div class="span3">
   <strong>DA</strong>
   </div>
   <div class="span3"> : <%= currency_symbol %><%= @salary.da_paisas %> </div>
   </div>

   <div class="row">
   <div class="span3">
   <strong>HRA</strong>
   </div>
   <div class="span3"> : <%= currency_symbol %><%= @salary.hra_paisas %></div>
   </div>

   <div class="row">
   <div class="span3">   
   <strong>CA</strong>
   </div>
   <div class="span3"> : <%= currency_symbol %><%= @salary.ca_paisas %> </div>
   </div>

   <div class="row">
   <div class="span3">
   <strong>SA</strong>
   </div>
   <div class="span3"> : <%= currency_symbol %><%= @salary.sa_paisas %></div>
   </div>

   <div class="row">
   <div class="span3">
   <strong>Experience Allowances</strong>
   </div>
   <div class="span3"> : <%= currency_symbol %><%= @salary.experience_allowance_paisas %></div>
   </div>

   <div class="row">
   <div class="span3">   
   <strong>Salary Effective From </strong>
   </div>
   <div class="span3"> : <%= @salary.effective_from.strftime("%d/%m/%Y") %></div>
   </div>

   <div class="row">
   <div class="span3">   
   <strong>Salary Effective To </strong>
   </div>
   <div class="span3"> : <%= @salary.effective_to.strftime("%d/%m/%Y") %></div>
   </div>

   <div class="row">
   <div class="span3">
   <strong>Deduction Details</strong>
   </div>
   <div class="span3"> : <%=  link_to(deductions_path(@deduction), class: "btn btn-small btn-primary") do %>
           Salary Deduction Details <% end %> </div>
   </div>
  
   </div>
   </div>
   </div>
</hr>
</div>
</div>