<h1><%= link_to "Employees", employees_path %></h1>
<br />
<div class="hero-unit">
<h5><strong>Employee Code</strong> : <%= @employee.employee_code %></h5>
<h5><strong>Employee Name</strong> : <%= @employee.name %></h5>
<h5><strong>Age</strong> : <%= @employee.age %></h5>


<hr>
   
<div class="row">
   <div class="span6 customer_left_span_properties">
   <h4><span class="customer">Employee Details</span></h4>
   <div class="row">
   <div class="span3">
   <strong>Date Of Birth</strong>
   </div>
   <div class="span3"> : <%= @employee.date_of_birth.strftime("%d/%m/%Y") %></div>
   </div>
   
   <div class="row">
   <div class="span3">
   <strong>Address</strong>
   </div>
   <div class="span3"> : <%= @employee.address %> </div>
   </div>

   <div class="row">
   <div class="span3">
   <strong>City</strong>
   </div>
   <div class="span3"> : <%= @employee.city %></div>
   </div>

   <div class="row">
   <div class="span3">   
   <strong>Category</strong>
   </div>
   <div class="span3"> : <%= @employee.employee_category %> </div>
   </div>

   <div class="row">
   <div class="span3">   
   <strong>Designation</strong>
   </div>
   <div class="span3"> : <%= @employee.designation %> </div>
   </div>

   <div class="row">
   <div class="span3">
   <strong>Branch</strong>
   </div>
   <div class="span3"> : <%= @employee.branch %></div>
   </div>

   <div class="row">
   <div class="span3">   
   <strong>Joined Date</strong>
   </div>
   <div class="span3"> : <%= @employee.employee_start_date.strftime("%d/%m/%Y") %></div>
   </div>


   <div class="row">
   <div class="span3">
   <strong>Salary Details</strong>
   </div>
   <div class="span3"> : <%=  link_to(salaries_path(@salary), class: "btn btn-small btn-primary") do %>
           Salary details <% end %> </div>
   </div>
  
   </div>
   </div>
   </div>
</hr>
</div>
</div>